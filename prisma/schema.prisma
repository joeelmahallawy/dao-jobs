// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employer {
  id String @id 
  discordUsername String
  ownsDao Dao?
  profilePicURL String
}

model JobSeeker {
  id String @id
  discordUsername String
  profilePicURL String
}

model Dao {
  id Int @id @default(autoincrement())  
  employerId String
  ownedBy Employer  @relation(fields: [employerId], references: [id])
  nameOfDao String
  discordServerExists Boolean
  discordLink String
  discordPopulation String
  twitterUrl String
  daoGoals String
  briefDescription String
  hasJob JobPosting[]
}

model JobPosting {
  id Int @id @default(autoincrement())
  daoId Int 
  workFor Dao @relation(fields: [daoId], references: [id])
  jobTitle String
  jobDescription String
  tokenExists Boolean
  tokenSymbol String
  tokenPrice Float
  tokenAddress String
  currencyOfCompensation String
  approximateSalary String
  salaryNegotiable Boolean
  discordContact String
}
